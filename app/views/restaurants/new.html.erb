<h1 style='text-align: center'>New restaurant</h1>

<div class='container'>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: ['chinese', 'italian', 'japanese', 'french', 'belgian']%>
  <%= f.button :submit, class: "btn-primary" %>
<% end %>

</div>
